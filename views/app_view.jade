extends layout

block content
  script.
    ShopifyApp.ready(function(){
        ShopifyApp.Bar.loadingOff();
        ShopifyApp.Bar.initialize({
          title: '#{title}',
        });
    });
  table.table.table-sm.table-bordered
    thead.thead-inverse
      tr
        th='Idx'
        th='Titlu'
        th='Variant'
        th='QTY'
        th='Client'
        th='Magazin'
        th='Mentiuni'
    -var index = 0
    each product in products
      tbody
        tr
          td=index++
          td
            span=product.name
            img(src="#{product.image}", style="max-width:75px")
          td=product.variant
          td=product.quantity
          td
            div
              strong='Nume: '
              span=product.customerFirstName
            div
              strong='Prenume: '
              span=product.customerLastName
            div
              strong='Email: '
              span=product.customerEmail
            div
              strong='Telefon: '
              span=product.customerPhone
          td=product.store
          td=product.comments

  